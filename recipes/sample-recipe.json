{
  "name": "Chocolate Chip Cookies",
  "category": "Dessert",
  "description": "Classic homemade chocolate chip cookies that are crispy on the edges and chewy in the middle.",
  "servings": {
    "amount": 24,
    "unit": "cookies",
    "note": "makes about two dozen"
  },
  "scaleWarnings": [
    "Chill dough between batches when making more than 36 cookies",
    "Bake in batches—do not crowd sheets when scaling up"
  ],
  "prepTime": "15 minutes",
  "cookTime": "12 minutes",
  "image": "images/chocolate-chip-cookies.jpg",
  "ingredients": [
    {
      "item": "2 1/4 cups all-purpose flour",
      "aisle": "Baking & Spices",
      "quantity": { "amount": 2.25, "unit": "cups" },
      "scaleBehavior": "linear"
    },
    {
      "item": "1 teaspoon baking soda",
      "aisle": "Baking & Spices",
      "quantity": { "amount": 1, "unit": "teaspoon" },
      "scaleBehavior": "sublinear",
      "scaleNote": "Use about 1.5 teaspoons for a double batch"
    },
    {
      "item": "1 teaspoon salt",
      "aisle": "Baking & Spices",
      "quantity": { "amount": 1, "unit": "teaspoon" },
      "scaleBehavior": "taste",
      "scaleNote": "Season to taste after mixing"
    },
    {
      "item": "1 cup butter, softened",
      "aisle": "Dairy & Eggs",
      "quantity": { "amount": 1, "unit": "cup" },
      "scaleBehavior": "linear"
    },
    {
      "item": "3/4 cup granulated sugar",
      "aisle": "Baking & Spices",
      "quantity": { "amount": 0.75, "unit": "cup" },
      "scaleBehavior": "linear"
    },
    {
      "item": "3/4 cup packed brown sugar",
      "aisle": "Baking & Spices",
      "quantity": { "amount": 0.75, "unit": "cup" },
      "scaleBehavior": "linear"
    },
    {
      "item": "2 large eggs",
      "aisle": "Dairy & Eggs",
      "quantity": { "amount": 2, "unit": null },
      "scaleBehavior": "stepped",
      "scaleNote": "Round to the nearest whole egg"
    },
    {
      "item": "2 teaspoons vanilla extract",
      "aisle": "Baking & Spices",
      "quantity": { "amount": 2, "unit": "teaspoon" },
      "scaleBehavior": "fixed",
      "scaleNote": "2 teaspoons is plenty even when doubling"
    },
    {
      "item": "2 cups chocolate chips",
      "aisle": "Other",
      "quantity": { "amount": 2, "unit": "cups" },
      "scaleBehavior": "linear"
    }
  ],
  "instructions": [
    {
      "text": "Preheat oven to 375°F (190°C).",
      "scaleAdjustment": {
        "trigger": 2,
        "note": "Bake in multiple batches when doubling to avoid overcrowding"
      }
    },
    "In a small bowl, whisk together flour, baking soda, and salt. Set aside.",
    "In a large bowl, cream together the softened butter and both sugars until light and fluffy.",
    "Beat in eggs one at a time, then stir in vanilla.",
    "Gradually blend in the flour mixture until just combined.",
    "Stir in chocolate chips.",
    "Drop rounded tablespoons of dough onto ungreased baking sheets.",
    "Bake for 9 to 11 minutes or until golden brown.",
    "Cool on baking sheet for 2 minutes before removing to wire rack."
  ],
